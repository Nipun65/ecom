extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/orders.css")

block content
    if orders.length>0
        ul.orders
            each order in orders
                li.orders__item
                    h1 Order - # #{order._id}&nbsp;
                         a(href=`/orders/${order._id}` target="_blank") - Invoice
                    ul.order__products
                        each product in order.products
                            li.orders__products-item #{product.product.title} (#{product.quantity})
